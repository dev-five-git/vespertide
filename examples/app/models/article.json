{
  "$schema": "https://raw.githubusercontent.com/dev-five-git/vespertide/refs/heads/main/schemas/model.schema.json",
  "name": "article",
  "columns": [
    {
      "name": "media_id",
      "type": "uuid",
      "nullable": false,
      "primary_key": true,
      "foreign_key": {
        "ref_table": "media",
        "ref_columns": ["id"],
        "on_delete": "cascade"
      }
    },
    {
      "name": "id",
      "type": "big_int",
      "nullable": false,
      "primary_key": true
    },
    {
      "name": "title",
      "type": { "kind": "varchar", "length": 500 },
      "nullable": false
    },
    {
      "name": "content",
      "type": "text",
      "nullable": false
    },
    {
      "name": "summary",
      "type": "text",
      "nullable": true
    },
    {
      "name": "thumbnail",
      "type": "text",
      "nullable": true
    },
    {
      "name": "status",
      "type": { "kind": "enum", "name": "article_status", "values": ["draft", "review", "published", "archived"] },
      "nullable": false,
      "default": "'draft'",
      "index": true
    },
    {
      "name": "published_at",
      "type": "timestamptz",
      "nullable": true,
      "index": true
    },
    {
      "name": "created_at",
      "type": "timestamptz",
      "nullable": false,
      "default": "now()"
    },
    {
      "name": "updated_at",
      "type": "timestamptz",
      "nullable": true
    }
  ],
  "constraints": [],
  "indexes": []
}
